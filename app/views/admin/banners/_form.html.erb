<%= semantic_form_for([:admin, @banner], html: {class: 'form-horizontal'}) do |f| %>
    <fieldset class="inputs">
      <legend><span>添加广告</span></legend>
      <% if f.object.errors.full_messages.present? %>
          <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            <%= f.object.errors.full_messages %>
          </div>
      <% end %>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">名称:</label>

        <div class="col-sm-10">
          <%= f.select(:type) { %>
              <optgroup label="开机广告">
                <%= options_for_select([['链接', 11], ['用户', 12], ['私教', 13], ['机构', 14], ['课程', 15], ['动态', 16]]) %>
              </optgroup>
              <optgroup label="普通广告">
                <%= options_for_select([['链接', 21], ['用户', 22], ['私教', 23], ['机构', 24], ['课程', 25], ['动态', 26]]) %>
              </optgroup>
          <% } %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">广告封面:</label>

        <div class="col-sm-10">
          <%= f.file_field(:image) %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">链接地址:</label>

        <div class="col-sm-10">
          <%= f.text_field(:url, class: 'form-control', placeholder: '如果您要跳转网页时,请输入链接地址') %>
        </div>
      </div>

      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">链接ID:</label>

        <div class="col-sm-10">
          <%= f.text_field(:link_id, class: 'form-control', placeholder: '如果您要跳转详情页时，请输入对应详情信息到ID') %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">开始日期:</label>

        <div class="col-sm-10">
          <%= f.text_field(:start_date, id: 'datepicker1', class: 'form-control', placeholder: '请选择广告到开始日期') %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">结束日期:</label>

        <div class="col-sm-10" id="datetimepicker2">
          <%= f.text_field(:end_date, id: 'datepicker2', class: 'form-control', placeholder: '请选择广告到结束日期') %>
        </div>
      </div>
    </fieldset>
    <%= f.submit('提交') %>
<% end %>
<script>
    $(function () {
                $("#datepicker1").datepicker({dateFormat: 'yy-mm-dd'});
                $("#datepicker2").datepicker({dateFormat: 'yy-mm-dd'});
            }
    );
</script>