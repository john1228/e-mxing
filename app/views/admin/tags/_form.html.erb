<%= semantic_form_for([:admin, @tag], html: {class: "form-horizontal"}) do |f| %>
    <fieldset class="inputs">
      <legend><span>添加标签</span></legend>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_signature">类型</label>

        <div class="col-sm-10">
          <%= f.select(:tag, Tag.tags_for_select, class: 'form-control') %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_signature">标签名</label>

        <div class="col-sm-10">
          <%= f.text_field(:name, class: 'form-control', placeholder: '请输入标签名字') %>
        </div>
      </div>
    </fieldset>
    <%= f.submit('提交') %>
<% end %>