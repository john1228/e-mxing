<%= semantic_form_for([:admin, @coupon], html: {class: 'form-horizontal'}) do |f| %>
    <fieldset class="inputs">
      <legend><span>添加图片</span></legend>

      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">优惠券名称:</label>

        <div class="col-sm-10">
          <%= f.text_field(:name, class: 'form-control', placeholder: '请输入优惠券名称') %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">适用种类:</label>

        <div class="col-sm-10">
          <%= f.select(:limit_category, [['通用', 1], ['机构', 2], ['私教', 3], ['课程', 4]]) %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">适用:</label>

        <div class="col-sm-10">
          <span id="limit_ext">
          </span>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">抵价金额:</label>

        <div class="col-sm-10">
          <%= f.text_field(:discount, class: 'form-control', placeholder: '请输入优惠券优惠的金额') %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">订单金额:</label>

        <div class="col-sm-10">
          <%= f.text_field(:min, class: 'form-control', placeholder: '满足订单金额才可使用该优惠券') %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">开始日期:</label>

        <div class="col-sm-10">
          <%= f.text_field(:start_date, id: 'datepicker1', class: 'form-control', placeholder: '请选择优惠券到开始日期') %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">结束日期:</label>

        <div class="col-sm-10" id="datetimepicker2">
          <%= f.text_field(:end_date, id: 'datepicker2', class: 'form-control', placeholder: '请选择优惠券到结束日期') %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">启用:</label>

        <div class="col-sm-10">
          <%= f.check_box(:active) %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">优惠券说明:</label>

        <div class="col-sm-10">
          <%= f.text_area(:info) %>
        </div>
      </div>
    </fieldset>
    <%= f.submit('提交') %>
<% end %>
<script>
    $(function () {
                $("#datepicker1").datepicker();
                $("#datepicker2").datepicker();
                $("#coupon_limit_category").change(function () {
                    $('#limit_ext').html("<select name='coupon[limit_ext]' id='coupon_limit_ext'>");
                    $.get($("#coupon_limit_category").val() + "/category", {}, function (data) {
                        var datas = eval(data);
                        $.each(datas, function (i) {
                            $("<option value='" + datas[i][0] + "'>" + datas[i][1] + "</option>").appendTo($("#limit_ext"));
                        });
                    });
                    $("</select>").appendTo($("#limit_ext"));

                    alert($('#limit_ext').html)
                });
            }
    );
</script>