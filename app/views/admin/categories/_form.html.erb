<%= semantic_form_for([:admin, @category], html: {class: "form-horizontal"}) do |f| %>
    <fieldset class="inputs">
      <legend><span>添加分类</span></legend>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_signature">名字</label>

        <div class="col-sm-10">
          <%= f.text_field(:name, class: 'form-control', placeholder: '请输入分类的名字') %>
        </div>
      </div>

      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_signature">关联小分类</label>

        <div class="col-sm-10">
          <%= f.select(:item, INTERESTS['items'].map { |item| [item['name'], item['id']] }, {include_hidden: false}, {multiple: true}) %>
        </div>
      </div>

      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_signature">标签名</label>

        <div class="col-sm-10">
          <div>
            <%= f.file_field(:background) %>
          </div>
        </div>
      </div>
    </fieldset>
    <%= f.submit('提交') %>
<% end %>
<script>
    $('#category_item').multiselect();
</script>