<%= semantic_form_for([:admin, @service, @service_dynamic], html: {class: "form-horizontal"}) do |f| %>
    <%= f.hidden_field(:identity, value: 1) %>
    <fieldset class="inputs">
      <legend><span>添加动态</span></legend>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_signature">置顶</label>

        <div class="col-sm-10">
          <%= f.check_box(:top) %>是
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_address">动态内容</label>

        <div class="col-sm-10">
          <%= f.text_area :content, class: 'field span12', placeholder: "请输入你要发布到动态内容", rows: 3, cols: 1 %>
        </div>
      </div>
    </fieldset>
    <%= f.submit('提交') %>
<% end %>